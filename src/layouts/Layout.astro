---
export interface Props {
	title: string;
}
import Header from "../components/header.astro";
import Footer from '../components/footer.astro'
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col justify-between min-h-screen bg-l-g-4">
		<Header />

		<div class="mx-72 sm:px-6 lg:px-8">
			<div class="mx-auto">
				<main
					class="flex flex-row min-h-full px-6 py-6 sm:py-16 lg:px-8 border-b border-l-g-7"
				>
					<div class="relative w-1/5 h-full"></div>
					<div class="">
						<a href={import.meta.env.BASE_URL}>
							<h1
								class="mt-4 text-3xl font-bold tracking-tight text-l-g-10 sm:text-5xl"
							>
								Changelog
							</h1>
							<h2 class="mt-6 text-base leading-7 text-l-g-10">
								New updates shipped every Friday.
							</h2>
						</a>
					</div>
				</main>
				<slot />
			</div>
		</div>
		<Footer />
	</body>
</html>
<style is:global>
	@import url('https://fonts.bunny.net/css?family=poppins:400,500,600,700');
	@import url('https://fonts.bunny.net/css?family=roboto:400,700|urbanist:500,700');
	html {
		font-family: poppins, sans-serif;
		background-color: #f6f6f6;
	}
	code {
		font-family: roboto;
	}
</style>
